<html>
<head>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <title>Блог</title>


</head>

<body>
  <% if current_user %>
    Залогинен как <%= current_user.name %> | <%= link_to "Logout", '/logout' %>
  <% else %>
    <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
  <% end %>
  <section id="container">

    <header class="clearfix">
    <h1>Блог</h1>
    <ul class="navigation-links">
      <li><a href="#"><%= link_to "Все записи", posts_path%></a></li>
      <% if current_user %>
      <li><a href="#"><%= link_to "Добавить запись", new_post_path%></a></li>
      <% end %>
    </ul>
  </header>

    <section>
      <p style="font-size: 22px;">
        <%= yield %>
      </p>
    </section>

  </section>
</body>

</html>
