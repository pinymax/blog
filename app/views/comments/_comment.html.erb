  <div class="table-responsive">
    <table class="table" border="0">
      <tr class="row">
        <td class="field-label col-md-3 active">
          <p align="center"><strong><i><%= comment.user.name%></i></strong></p>
        </td>
        <td class="col-md-9">
          <%= comment.created_at.strftime("%H:%M,  %d %b. %Y")%>
        </td>
      </tr>
      <tr class="row">
        <td class="field-label col-md-3 active">
          <center> <label>  <%= image_tag comment.user.avatar.to_s %></label></center>
        </td>
        <td class="col-md-9">
          <p align="left"><%= comment.body %></p>
        </td>
      </tr>
    </table>
  </div>
  <% if current_user %>
   <div align="right">
     <%= link_to "Ответить", post_comment_reply_path(@post, comment), :class => "btn btn-default navbar-btn"%>
     <% if current_user == comment.user %>
      <%= link_to "Удалить", post_comment_path(@post, comment), method: :delete, :class => "btn btn-default navbar-btn", remote: true %>
      <%= link_to "Редактировать", edit_post_comment_path(@post, comment), :class => "btn btn-default navbar-btn" %>
    </div>
    <% end %>
  <% end %>
  <hr>
  <br>
  <br>
