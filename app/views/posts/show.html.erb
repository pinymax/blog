<h1 class="title">
  <%= @post.title %>
</h1>

<p class="body">
  <%= @post.body %>
</p>
<%= link_to 'Редактировать', edit_post_path(@post) %>
<%= link_to 'Удалить запись', post_path(@post), method: :delete%>

<h2> Комментарии: </h2>

  <% @post.comments.each do |comment| %>
    <p>
      <strong><i><%= comment.name %>:</i></strong><br>
    <%= comment.body %>
    </p>
  <% end %>

<h2> Добавить комментарий </h2>
<p>
<%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
        <%= f.label :name %><br />
        <%= f.text_field :name%>
    </p>

    <p>
        <%= f.label :body %><br />
        <%= f.text_area :body %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>
</p>
